include ../../components/select/select
-
    var optionsMark = [
        'Марка',
        'Toyota',
        'Лада',
        'Mazda'
    ];

-
    var optionsModel = [
        'Модель',
        'Camry',
        'Vesta',
        '323'
    ];

-
    var optionsGeneration = [
        'Поколение',
        '2018',
        '2016',
        'III (BF), 1985 — 1989'
    ];


.modal.modal__ask-question.js-modal(data-modal-type='ask-question')
    .modal__inner
        .close.modal__close.js-modal-close
        .modal__title Задать вопрос
        .modal__text Не нашлось нужной публикации? Специалисты готовы поделиться своими знаниями. Спрашивай!
        .modal__block
            .modal__text Ваш автомобиль
            form(action='', method='post').modal__form-ask-question
                +select(optionsMark, 'mark', 'js-modal-select')
                +select(optionsModel, 'model', 'js-modal-select')
                +select(optionsGeneration, 'generation', 'js-modal-select')

        .modal__block
            .modal__text Ваш вопрос
            input(name='question', type='text', placeholder='Заголовок вопроса')
            textarea(name="textarea", placeholder="Текст вопроса")
        .modal__hulf
            button.button-yellow.button__send Отправить
            .modal__policy
                | Нажимая на кнопку, Вы соглашаетесь на обработку
                a(href='#')=' персональных данных'