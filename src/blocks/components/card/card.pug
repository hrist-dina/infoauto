mixin card(img, title, marks, hasRemove = false)
    a(href="#").card
        if (hasRemove)
            span.remove.card__remove Удалить
        .card__img(style=`background-image: url(${img})`)
        .card__title=title
        if (marks)
            .card__mark-list
                for mark in marks
                    .mark.card__mark=mark